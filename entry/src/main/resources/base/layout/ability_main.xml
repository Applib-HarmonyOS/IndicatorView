<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <PageSlider
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center">
    </PageSlider>

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="10vp"
        ohos:align_parent_bottom="true">

        <Button
            ohos:id="$+id:skip_button"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:padding="10vp"
            ohos:text="$string:button_text_skip"
            ohos:text_color="$color:white"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="25vp"/>

        <io.github.kshitij_jain.indicatorview.IndicatorView
            ohos:id="$+id:indicator_view"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:activeColor="$color:white"
            ohos:horizontal_center="true"
            ohos:vertical_center="true"
            ohos:inactiveColor="$color:black"
            ohos:indicatorSize="15vp"/>

        <Button
            ohos:id="$+id:next_button"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:padding="10vp"
            ohos:text="$string:button_text_next"
            ohos:text_color="$color:white"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="25vp"
            ohos:vertical_center="true"/>
    </DependentLayout>
</DependentLayout>